class DBSetup {
	function getWCTables($withHybrid = true) {
		$tables = array(
			'catalogdocs', 'catalognode', 'catalogtree',
			'datasources',
			'dsfile',
			'dshtmltext',
			'dshybrid',	'dshfields', 'hybriddatasources',
			'dsphpsource',
			'dsrating','dsratinglog',
			'enums', 'enumvalues',
			'index', 'strongtags',
			'objects',
			'siteobjects', 'sitepages', 'sitetree',
			'wcsgroups', 'wcsmembership', 'wcsusers', 'wcsopenid', 
			'wctemplates', 'wctemplate_blocks'
		);
		
		if($withHybrid)
			$tables = array_merge($tables, self::getDSHybridTables());
		return $tables;
	}
	
	function getDSHybridTables() {
		static $hybrid;
		if(!isset($hybrid)) {
			$hybrid = array();
			$db = WCDB::bo();
			$res = $db->query('SELECT ds_id FROM hybriddatasources');
			if(!$db->errorCode()) {
				while($r = mysql_fetch_row($res))
					$hybrid[] = strtolower("dshybrid_{$r[0]}");
				mysql_free_result($res);
			}
		}
		return $hybrid;
	}
	
	function getAbsentWCTables() {
		$result = array_diff(self::getWCTables(), self::getAllTables());
		return $result;
	}
	
	function getExistingWCTables() {
		$result = array_diff(self::getWCTables(), self::getAbsentWCTables());
		return $result;
	}
	
	function getAllTables() {
		static $all;
		if(!isset($all)) {
			$all = array();
			$db = WCDB::bo();
			$res = $db->query('SHOW TABLES');
			while($r = mysql_fetch_row($res))
				$all[] = strtolower($r[0]);
			mysql_free_result($res);
		}
		return $all;
	}
}
