<script>
function wxyopen(uri,x,y) {
	window.open(uri,'',"resizable=yes, scrollbars=yes, status=yes" + (y > 0 ? ", height=" + y : "") + (x > 0 ? ", width=" + x : ""));
}
function addAndSelectTpl(id, name) {
	var s = f.tpl_id;
	var o = new Option();
	o.innerHTML = name;
	o.value = id;
	s.appendChild(o);
	o.selected = true;
}
</script>
