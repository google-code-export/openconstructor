	require_once('../include/headlines._wc');
	$pagesize=30;
	if(intval(@$_COOKIE['pagesize'])>0)
		$pagesize=$_COOKIE['pagesize'];
	$searchclause = $ds->isIndexable && !isset($_GET['noindex']) ? get_index_clause(@$_GET['search']) : get_clause(@$_GET['search'],'header,html');
